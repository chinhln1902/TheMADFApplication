<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foodbank.themadf.themadf.CheckInFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@drawable/form"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal|center"
                    android:text="@string/checkin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#0c1bef" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/subform"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tFirstN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:text="@string/first"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtClientFirstName"
                            android:layout_width="@dimen/input_width"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/textbox"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3">

                        </EditText>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tLastN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:text="@string/lastname"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtClientLastName"
                            android:layout_width="190sp"
                            android:layout_height="@dimen/input_height"
                            android:background="@drawable/textbox"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:text="@string/phone"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtPhone"
                            android:layout_width="190sp"
                            android:layout_height="@dimen/input_height"
                            android:background="@drawable/textbox"
                            android:inputType="phone"
                            android:digits="0123456789+"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:text="@string/email"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="190sp"
                            android:layout_height="@dimen/input_height"
                            android:background="@drawable/textbox"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />
                    </LinearLayout>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/tDOB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dob"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/font3" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/calendar" />

                        <EditText
                            android:id="@+id/edtDOB"
                            android:layout_width="400sp"
                            android:layout_height="@dimen/input_height"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/textbox"
                            android:inputType="date"
                            android:digits="0123456789/"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tHomeless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/homeless"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />


                        <RadioGroup
                            android:id="@+id/rgHomeless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checkedButton="@+id/edtHomeless"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/hother"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="@string/other" />

                            <RadioButton
                                android:id="@+id/hyes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/yes" />

                            <RadioButton
                                android:id="@+id/hno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/no" />
                        </RadioGroup>
                    </LinearLayout>


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/gender"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />


                        <RadioGroup
                            android:id="@+id/rgGender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checkedButton="@+id/edtGender"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/gother"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="@string/other" />

                            <RadioButton
                                android:id="@+id/gmale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/male" />

                            <RadioButton
                                android:id="@+id/gfemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/female" />
                        </RadioGroup>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tVetStat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/vetstat"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />


                        <RadioGroup
                            android:id="@+id/rgVetStat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checkedButton="@+id/edtVetStat"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/vother"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="@string/other" />

                            <RadioButton
                                android:id="@+id/vyes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:onClick="grats"
                                android:text="@string/yes" />

                            <RadioButton
                                android:id="@+id/vno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/no" />

                        </RadioGroup>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pets"
                        android:layout_marginLeft="15sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/font3"
                        android:textStyle="italic" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15sp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/famsize"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtClientFamilySize"
                            android:layout_width="100sp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="39sp"
                            android:background="@drawable/textbox"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />

                    </LinearLayout>


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dogs"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtClientDogSize"
                            android:layout_width="100sp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="95sp"
                            android:background="@drawable/textbox"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cats"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtClientCatSize"
                            android:layout_width="100sp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="109sp"

                            android:background="@drawable/textbox"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/babies"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />

                        <EditText
                            android:id="@+id/edtClientBabiesSize"
                            android:layout_width="100sp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="25sp"
                            android:background="@drawable/textbox"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#09090a"
                            android:textSize="@dimen/font3" />

                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/subform"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/font_height"
                            android:layout_height="@dimen/font_height"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/place"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/address2"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tStreet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/street"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font" />

                        <EditText
                            android:id="@+id/edtClientStreetAddress"
                            android:layout_width="240dp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="52dp"
                            android:background="@drawable/textbox"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#5e5e60"
                            android:textSize="@dimen/font3"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tcity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/city"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font" />

                        <EditText
                            android:id="@+id/edtCity"
                            android:layout_width="240dp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="68dp"
                            android:background="@drawable/textbox"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#5e5e60"
                            android:textSize="@dimen/font3"
                            android:textStyle="italic" />
                    </LinearLayout>


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/state"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font" />

                        <EditText
                            android:id="@+id/edtState"
                            android:layout_width="125sp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="120dp"
                            android:background="@drawable/textbox"
                            android:digits="0123456789"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#5e5e60"
                            android:textSize="@dimen/font3"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tZip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/zipcode"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font" />

                        <EditText
                            android:id="@+id/edtClientZipCode"
                            android:layout_width="125sp"
                            android:layout_height="@dimen/input_height"
                            android:layout_marginLeft="90dp"
                            android:background="@drawable/textbox"
                            android:digits="0123456789"
                            android:inputType="textPostalAddress"
                            android:padding="10dp"
                            android:textColor="#f21906"
                            android:textColorHint="#5e5e60"
                            android:textSize="@dimen/font3"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/subform"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/font_height"
                            android:layout_height="@dimen/font_height"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/client" />

                        <TextView
                            android:id="@+id/tNewClient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Is this your first time checking in with us?"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font3" />
                    </LinearLayout>


                    <RadioGroup
                        android:id="@+id/group_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/yesButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/holo_green_dark"
                            android:text="@string/yes"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font" />

                        <RadioButton
                            android:id="@+id/noButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/holo_green_dark"
                            android:text="@string/no"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font" />
                    </RadioGroup>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tSig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/signature"
                            android:textColor="@color/textColor"

                            android:textSize="@dimen/font3" />

                        <CheckBox
                            android:id="@+id/edtCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/font_height"
                            android:layout_marginLeft="20sp"
                            android:layout_marginStart="20sp"
                            android:buttonTint="@android:color/holo_green_dark"
                            android:gravity="center_horizontal"
                            android:text="@string/ack"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/font" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/buttonClientCheckIn"
                    android:layout_width="200dp"
